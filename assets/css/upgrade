/* ==========================================================
   HERO: cinematic overlay + water shimmer layer
   Works if your hero uses #hero or .hero or .hero-section.
   ========================================================== */

#hero, .hero, .hero-section{
  position: relative;
  overflow: hidden;
  border-bottom: 1px solid var(--line);
}

/* Dark cinematic overlay */
#hero::before, .hero::before, .hero-section::before{
  content:"";
  position:absolute;
  inset:0;
  background:
    radial-gradient(1200px 700px at 20% 30%, rgba(0,0,0,.12), transparent 60%),
    linear-gradient(to bottom, rgba(0,0,0,.55), rgba(0,0,0,.25) 55%, rgba(0,0,0,.60));
  pointer-events:none;
  z-index:1;
}

/* Subtle “lake shimmer” layer */
#hero::after, .hero::after, .hero-section::after{
  content:"";
  position:absolute;
  left:-20%;
  right:-20%;
  bottom:-25%;
  height:55%;
  background:
    radial-gradient(900px 250px at 50% 0%, rgba(255,255,255,.10), transparent 60%),
    repeating-linear-gradient(
      90deg,
      rgba(255,255,255,.06) 0px,
      rgba(255,255,255,.02) 18px,
      rgba(255,255,255,.00) 36px
    );
  filter: blur(0.2px);
  opacity:.55;
  transform: skewY(-2deg);
  mix-blend-mode: overlay;
  pointer-events:none;
  z-index:1;
  animation: twShimmer 10s linear infinite;
}

@keyframes twShimmer{
  0%{ transform: skewY(-2deg) translateX(0); }
  100%{ transform: skewY(-2deg) translateX(140px); }
}

/* Make sure hero content sits above overlays */
